<!DOCTYPE html>
<html>
  <head>
  <title>Initiative Tracker</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrapper-bg-white-block">
      <div class="logo-style">
        <%= image_tag("logo.png") %>
      </div>
    </div>
    <div class="wrapper">
      <% if flash[:notice] %>
        <p><%= flash[:notice] %></p>
      <% end %>
    </div> 
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
