<div class="wrapper">
  <div class="add-user-btn">
    <% if current_user.is_admin %>
      <%= link_to 'Add User', new_user_path, class: 'btn-primary w-button' %>
    <% end %>
  </div>
  <h2>Users</h2>
  <div class="init-list">
    <% @users.each do |user| %>
      <% if current_user.is_admin? %>
        <%= link_to edit_user_path(user), class: "no-link" do %>
          <%= render partial: "user", locals: { user: user } %>
        <% end %>
      <% else %>
        <%= link_to initiative_path(user), class: "no-link" do %>
          <%= render partial: "user", locals: { user: user } %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
