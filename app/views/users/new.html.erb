<div class='wrapper'>
  <h2>New User</h2>
  <%= link_to 'Show', @user %> |

  <div class='card full-width'>
  <div class='w-form'>
  <%= form_for :user, url: users_path do |f| %>
    <% if @user.errors.any? %>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    <% end %>

    <%= f.label :fullname, 'User Name', class: 'form-field-label' %>
    <%= f.text_field :fullname, placeholder: 'Enter name here...', maxlength: '256', class: 'form-field w-input' %>
   
    <%= f.label :email, 'Email', class: 'form-field-label' %>
    <%= f.text_field :email, placeholder: 'Enter email here', class: 'form-field w-input' %> 
    
    <%= f.submit 'Submit', class: 'btn-primary w-button' %>
    <% end %>

  </div>
  </div>  
</div>
<%= link_to 'Back', users_path %>